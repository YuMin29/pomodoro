<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="MissionItemView">
        <attr name="add_button_visibility" format="integer"></attr>
        <attr name="minus_button_visibility" format="integer"></attr>
        <attr name="android:text"></attr>
        <attr name="android:description"></attr>
    </declare-styleable>

    <declare-styleable name="GroupRecyclerView">
        <attr name="group_height" format="dimension" />
        <attr name="group_child_offset" format="dimension" />
        <attr name="group_background" format="color" />
        <attr name="group_text_color" format="color" />
        <attr name="group_text_size" format="dimension" />
        <attr name="group_center" format="boolean" />
        <attr name="group_padding_left" format="dimension" />
        <attr name="group_padding_right" format="dimension" />
        <attr name="group_has_header" format="boolean" />
    </declare-styleable>
    <declare-styleable name="FullscreenAttrs">
        <attr name="fullscreenBackgroundColor" format="color" />
        <attr name="fullscreenTextColor" format="color" />
    </declare-styleable>

    <declare-styleable name="WaveView">
        <!-- 中心圆颜色-->
        <attr name="center_color" format="integer" />
        <!-- 中心圆半径（起始扩散波纹的起始半径）-->
        <attr name="center_radius" format="dimension"/>
        <!-- 扩散最大半径-->
        <attr name="max_radius" format="dimension"/>
        <!-- 创建新的波纹的间隔时间(毫秒)-->
        <attr name="wave_interval_time" format="integer"/>
        <!-- 一个波纹从创建到消失的持续时间(毫秒)-->
        <attr name="wave_duration" format="integer"/>
        <!-- 波纹的宽度-->
        <attr name="wave_width" format="dimension"/>
    </declare-styleable>
</resources>