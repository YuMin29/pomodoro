<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="MissionItem"
            type="com.yumin.pomodoro.utils.MissionItem" />

        <variable
            name="ViewModel"
            type="com.yumin.pomodoro.ui.home.AddMissionViewModel" />

        <variable
            name="isContentEmpty"
            type="boolean" />

        <import type="android.view.View"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:background="#FFFFFF"
        android:orientation="horizontal">

        <Button
            android:id="@+id/add_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@color/layout_item_background"
            android:stateListAnimator="@null"
            android:text="+"
            android:textColor="@android:color/tab_indicator_text"
            android:layout_weight="1"
            android:visibility="@{MissionItem.addButtonVisibility}" />

        <LinearLayout
            android:id="@+id/count_linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="0.3">

            <TextView
                android:id="@+id/num_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginBottom="4dp"
                android:fontFamily="@font/roboto_thin"
                android:textSize="36sp"
                android:text="@{MissionItem.content}"
                android:visibility="@{isContentEmpty ? View.GONE : View.VISIBLE}"/>

            <TextView
                android:id="@+id/description_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/roboto_thin"
                android:singleLine="false"
                android:textColor="#878787"
                android:textSize="14sp"
                android:gravity="center"
                app:loadIcon="@{isContentEmpty}"
                android:text="@{MissionItem.desc}"/>
        </LinearLayout>

        <Button
            android:id="@+id/minus_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@color/layout_item_background"
            android:stateListAnimator="@null"
            android:text="-"
            android:textColor="@android:color/tab_indicator_text"
            android:layout_weight="1"
            android:visibility="@{MissionItem.minusButtonVisibility}" />
    </LinearLayout>
</layout>
