<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="clickProxy"
            type="com.yumin.pomodoro.ui.view.EditMissionFragment.ClickProxy" />
        <variable
            name="viewmodel"
            type="com.yumin.pomodoro.ui.main.viewmodel.EditMissionViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/layout_main_background">

        <EditText
            android:id="@+id/mission_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="24dp"
            android:hint="@string/mission_name"
            android:textColorHint="@color/colorPrimaryLight"
            android:textColor="@color/colorPrimary"
            android:backgroundTint="@color/colorPrimaryDark"
            android:text="@={viewmodel.editMission.name}"
            app:layout_constraintBottom_toTopOf="@+id/scrollview"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ScrollView
            android:id="@+id/scrollview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/cancel_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mission_title">
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="1">

                    <com.yumin.pomodoro.ui.view.ItemTextView
                        android:id="@+id/item_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/mission_time"
                        android:layout_weight="1"
                        app:itemContent="@={viewmodel.editMission.time}"
                        app:itemDescription="@{@string/mission_time}"/>
                </TableRow>


                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="2">

                    <com.yumin.pomodoro.ui.view.ItemTextView
                        android:id="@+id/item_short_break"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:itemContent="@={viewmodel.editMission.shortBreakTime}"
                        app:itemDescription="@{@string/mission_break}"/>

                    <com.yumin.pomodoro.ui.view.ItemTextView
                        android:id="@+id/item_long_break"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:itemContent="@={viewmodel.editMission.longBreakTime}"
                        app:itemDescription="@{@string/mission_long_break}"/>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="2">

                    <com.yumin.pomodoro.ui.view.ItemTextView
                        android:id="@+id/item_goal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:itemContent="@={viewmodel.editMission.goal}"
                        app:itemDescription="@{@string/mission_goal}"/>

                    <com.yumin.pomodoro.ui.view.ItemListView
                        android:id="@+id/item_repeat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:itemListVal="@={viewmodel.editMission.repeat}"
                        app:itemDescription="@{@string/mission_repeat}"/>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="2">

                    <com.yumin.pomodoro.ui.view.ItemDateView
                        android:id="@+id/item_operate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:itemDateVal="@={viewmodel.editMission.operateDay}"
                        app:itemDescription="@{@string/mission_operate_day}"/>

                    <com.yumin.pomodoro.ui.view.ItemDialogView
                        android:id="@+id/item_theme"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:itemValue="@={viewmodel.editMission.color}"
                        app:itemDescription="@{@string/mission_theme}"/>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="1">

                    <com.yumin.pomodoro.ui.view.ItemImageView
                        android:id="@+id/item_notification"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:itemEnable="@={viewmodel.editMission.enableNotification}"
                        app:itemDescription="@{@string/mission_notification}"/>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="1">

                    <com.yumin.pomodoro.ui.view.ItemImageView
                        android:id="@+id/item_sound"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:itemEnable="@={viewmodel.editMission.enableSound}"
                        app:itemDescription="@{@string/mission_sound}"/>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="2">

                    <com.yumin.pomodoro.ui.view.ItemImageView
                        android:id="@+id/item_vibrate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:itemEnable="@={viewmodel.editMission.enableVibrate}"
                        app:itemDescription="@{@string/mission_vibrate}"/>

                    <com.yumin.pomodoro.ui.view.ItemImageView
                        android:id="@+id/item_keep_screen_on"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:itemEnable="@={viewmodel.editMission.keepScreenOn}"
                        app:itemDescription="@{@string/mission_keep_awake}"/>
                </TableRow>
            </TableLayout>
        </ScrollView>

        <Button
            android:id="@+id/save_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:background="@color/colorPrimaryDark"
            android:textColor="@color/button_normal"
            android:textStyle="bold"
            android:onClick="@{()->clickProxy.onSaveButtonClick()}"
            android:text="save"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/cancel_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/scrollview" />

        <Button
            android:id="@+id/cancel_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:background="@color/colorPrimaryDark"
            android:textColor="@color/button_normal"
            android:textStyle="bold"
            android:onClick="@{()->clickProxy.onCancelButtonClick()}"
            android:text="cancel"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/save_button"
            app:layout_constraintTop_toBottomOf="@+id/scrollview" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
